= form_for [:admin, @page] do |f|

  = render partial: 'partials/errors', locals: { model: @page }

  .row
    .col-xs-4
      .form-group
        = f.label :title
        = f.text_field :title, class: 'form-control'

  .row
    .col-xs-12
      .form-group
        = f.label :meta_tags
        = f.text_area :meta_tags, class: 'form-control', rows: 6

  .row
    .col-xs-12
      .form-group
        = f.label :content
        = f.cktext_area :content, class: 'form-control'

  .form-group
    = f.submit t('actions.save'), class: 'btn btn-primary'