= content_for :page_title do
  = t('brand.brands')

= content_for :main_content do

  %table.table.table-bordered.small
    %thead
      %tr
        %th
          ID
        %th
          = human_name('title')
        %th
          = t('actions.title')

    %tbody
      - @brands.each do |brand|
        %tr
          %td= brand.id
          %td= brand.title

          %td
            = edit_button(edit_admin_brand_path(brand))
            = delete_button(admin_brand_path(brand))


= content_for :side_bar do
  = add_button(new_admin_brand_path)