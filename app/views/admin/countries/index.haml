= content_for :page_title do
  = t('country.countries')

= content_for :main_content do

  %table.table.table-bordered.small
    %thead
      %tr
        %th
          ID
        %th
          = human_name('name')
        %th
          = t('actions.title')

    %tbody
      - @countries.each do |country|
        %tr
          %td= country.id
          %td= country.name

          %td
            = edit_button(edit_admin_country_path(country))
            = delete_button(admin_country_path(country))


= content_for :side_bar do
  = add_button(new_admin_country_path)