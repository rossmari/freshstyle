= content_for :page_title do
  = t('good.goods')

= content_for :main_content do

  %table.table.table-bordered.small
    %thead
      %tr
        %th
          ID
        %th
          = human_name('name')
        %th
          = human_name('article')
        %th
          = human_name('color')
        %th
          = human_name('size')
        %th
          = human_name('consist')
        %th
          = human_name('origin_country')
        %th
          = human_name('design_country')
        %th
          = human_name('count_in_store')
        %th
          = human_name('active')
        %th
          = human_name('price')
        %th
          = t('actions.title')

    %tbody
      - @goods.each do |good|
        %tr
          %td= good.id
          %td= good.name
          %td= good.article
          %td= good.color
          %td= good.size
          %td= good.consist
          %td= good.origin_country.name
          %td= good.design_country.name
          %td= good.count_in_store
          %td= good.active ? 'Да' : 'Нет'
          %td= good.price

          %td
            = show_button(admin_good_path(good))
            = edit_button(edit_admin_good_path(good))
            = delete_button(admin_good_path(good))


= content_for :side_bar do
  = add_button(new_admin_good_path)