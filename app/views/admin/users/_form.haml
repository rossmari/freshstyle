= form_for [:admin, @user] do |f|

  = render partial: 'partials/errors', locals: { model: @user }

  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.submit t('actions.save'), class: 'btn btn-primary'