                - if user_signed_in?
                  - if current_user.is_admin
                    %li
                      = link_to 'Кабинет администратора', admin_root_path
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %span.glyphicon.glyphicon-off
                      Выход
