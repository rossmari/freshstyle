    NAVBAR
    \==================================================
  %body
    #StayFocusd-infobar{:style => "display: none; top: 0px;"}
      %img{:src => "chrome-extension://laankejkbhbdhmipfmgcngdelahlfoji/common/img/eye_19x19_red.png"}/
      %span#StayFocusd-infobar-msg
      %span#StayFocusd-infobar-links
        %a#StayFocusd-infobar-never-show> hide forever
          |  
        %a#StayFocusd-infobar-hide hide once
    .navbar-wrapper
      .container
        .navbar.navbar-inverse.navbar-static-top{:role => "navigation"}
          .container
            .navbar-header
              %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "#"} Свежий стиль
            .navbar-collapse.collapse
              %ul.nav.navbar-nav
                %li.active
                  %a{:href => "#"} Главная
                %li
                  %a{:href => "#about"} О нас
                %li
                  %a{:href => "#contact"} Как оплатить
              %ul.nav.navbar-nav.navbar-right
                - if user_signed_in?
                  - if current_user.is_admin
                    %li
                      = link_to 'Кабинет администратора', admin_root_path
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %span.glyphicon.glyphicon-off
                      Выход
                - else
                  = link_to 'Зарегистрироваться', new_registration_path(:user)


    /
      Carousel
      \==================================================
    #myCarousel.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        - @carousels.each_with_index do |carousel, index|
          %li{class: ('active' if carousel.main), "data-slide-to" => "#{index}", "data-target" => "#myCarousel"}

      .carousel-inner
        - @carousels.each_with_index do |carousel, index|
          %div{class: "item #{'active' if carousel.main}"}
            %img{:alt => "Slide #{index}", :src => carousel.picture.url(:cropped) }
            .container
              .carousel-caption
                %h1
                  = carousel.header
                %p
                  = carousel.content_text

      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right
    / /.carousel
    /
      Marketing messaging and featurettes
      \==================================================
    / Wrap the rest of the page in another container to center all the content.
    .container.marketing
      / Three columns of text below the carousel
      .row

        - @categories.each do |category|
          .col-lg-4
            = image_tag(category.picture.url(:icon), style: 'width: 140px; height: 140px;', class: 'img-circle')
            %h2
              = category.name
            %p
              Небольшое описание категории товара
            %p
              = link_to 'Подробнее', categories_path(category), class: 'btn btn-default'

      //START THE FEATURETTES
      - @main_offers.each_with_index do |main_offer, index|
        %hr.featurette-divider/
        .row.featurette
          - if index.odd?
            .col-md-7
              %h2.featurette-heading
                = main_offer.header
              %p.lead
                = main_offer.content_text
            .col-md-5
              = image_tag(main_offer.picture.url(:main_thumb), class: 'featurette-image img-responsive')
          - else
            .col-md-5
              = image_tag(main_offer.picture.url(:main_thumb), class: 'featurette-image img-responsive')
            .col-md-7
              %h2.featurette-heading
                = main_offer.header
              %p.lead
                = main_offer.content_text

      %hr.featurette-divider/

      // END THE FEATURETTES
      // FOOTER
      %footer
        %p.pull-right
          %a{:href => "#"} Back to top
        %p
          © 2014 ArVi Studio
          -#%a{:href => "#"} Privacy
          -#·
          -#%a{:href => "#"} Terms
