/
  Carousel
  \==================================================
#myCarousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    - @carousels.each_with_index do |carousel, index|
      %li{class: ('active' if carousel.main), "data-slide-to" => "#{index}", "data-target" => "#myCarousel"}

  .carousel-inner
    - @carousels.each_with_index do |carousel, index|
      %div{class: "item #{'active' if carousel.main}"}
        %img{:alt => "Slide #{index}", :src => carousel.picture.url(:cropped) }
        .container
          .carousel-caption
            %h1
              = carousel.header
            %p
              = carousel.content_text

  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right
/ /.carousel
/
  Marketing messaging and featurettes
  \==================================================
/ Wrap the rest of the page in another container to center all the content.
.container.marketing
  / Three columns of text below the carousel
  .row

    - @categories.each do |category|
      .col-lg-4
        = image_tag(category.picture.url(:icon), style: 'width: 140px; height: 140px;', class: 'img-circle')
        %h2
          = category.name
        %p
          Небольшое описание категории товара
        %p
          = link_to 'Подробнее', categories_path(category), class: 'btn btn-default'

  //START THE FEATURETTES
  - @main_offers.each_with_index do |main_offer, index|
    %hr.featurette-divider/
    .row.featurette
      - if index.odd?
        .col-md-7
          %h2.featurette-heading
            = main_offer.header
          %p.lead
            = main_offer.content_text
        .col-md-5
          = image_tag(main_offer.picture.url(:main_thumb), class: 'featurette-image img-responsive')
      - else
        .col-md-5
          = image_tag(main_offer.picture.url(:main_thumb), class: 'featurette-image img-responsive')
        .col-md-7
          %h2.featurette-heading
            = main_offer.header
          %p.lead
            = main_offer.content_text

  %hr.featurette-divider/

  // END THE FEATURETTES
  // FOOTER
  %footer
    %p.pull-right
      %a{:href => "#"} Back to top
    %p
