                  = link_to 'Зарегистрироваться', new_registration_path(:user)


    /
      Carousel
      \==================================================
    #myCarousel.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        - @carousels.each_with_index do |carousel, index|
          %li{class: ('active' if carousel.main), "data-slide-to" => "#{index}", "data-target" => "#myCarousel"}

      .carousel-inner
        - @carousels.each_with_index do |carousel, index|
          %div{class: "item #{'active' if carousel.main}"}
            %img{:alt => "Slide #{index}", :src => carousel.picture.url(:cropped) }
            .container
              .carousel-caption
                %h1
                  = carousel.header
                %p
                  = carousel.content_text

      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right
    / /.carousel
