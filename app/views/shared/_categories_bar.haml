.navbar.navbar-default
  .container-fluid
    .navbar-collapse
      %ul.nav.navbar-nav.nav-justified{ style: "#{'width:70%;' if controller_name != 'main' }" }
        %li.dropdown
          = link_to 'Каталог', '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, style: 'font-size:18pt;'
          .dropdown-menu.categories-dropdown
            .container-fluid
              .col-md-9
                .container-fluid
                  - Category.roots.includes(:children).in_groups_of(1, false) do |roots|
                    .col-md-3
                      - roots.each do |category|
                        %h5
                          = category.name
                        %ul.subcategories
                          - category.children.each do |subscat|
                            %li
                              %h6
                                = link_to subscat.name, category_goods_path(subscat)
              .col-md-3
                - super_good = Good.main_offers.first
                %h5
                  Лучшее предложение
                = link_to good_path(super_good) do
                  = image_tag super_good.main_image(:basket)
                %h5
                  Специальная цена: #{number_to_rubls(super_good.price)}

      - if controller_name != 'main'
        %ul.nav.navbar-nav
          - pages.each do |page|
            %li
              = link_to page.title, page