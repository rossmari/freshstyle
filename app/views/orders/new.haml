- @processor.goods_wrappers.each do |wrapper|
  - if wrapper.exist
    - good = wrapper.good
    .row
      .col-md-offset-1.col-md-2
        = link_to good_path(good), class: 'thumbnail', title: 'К товару' do
          = image_tag(good.main_image(:admin_thumb))

      .col-md-offset-1.col-md-7
        .h4
          = "#{good.category.name}, #{good.brand.title}"
          = "Стоймость: #{number_to_rubls(good.price)}"
        .h4
          Размер:
          %span.size
            = wrapper.size

.row
  .h4
    .col-md-offset-6.col-md-3
      Общая стоймость:
    .col-md-3
      = number_to_rubls(@price)

