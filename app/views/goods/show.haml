.row
  .col-md-2.text-center
    - @good.images.each do |image|
      = link_to image.picture.url, class: 'preview fancybox thumbnail col-md-offset-2 col-md-8', rel: 'gallery1', data: { big: image.picture.url(:big) } do
        = image_tag(image.picture.url(:preview))

  .col-md-4.text-center.big_image
    = link_to @good.main_image(:original), class: 'fancybox', rel: 'gallery1' do
      = image_tag(@good.main_image(:big))

  .col-md-4
    .row
      .h3 #{@good.title}, #{@good.brand.title}

    .row
      .h5.text-muted
        = "Артикул: #{@good.article}"

    .row
      .h4
        Цена: #{number_to_rubls(@good.price)}
        %span.label.label-danger
          %del
            #{number_to_rubls(@good.monetary_discount)}
    .row
      %h5 Цвет: #{@good.color}

    .row
      %h5 Страна дизайна: #{@good.design_country.name}

    .row
      %h5 Страна производитель: #{@good.origin_country.name}

    .row
      .h5{style: 'display:inline;'}
        Доступные размеры:
      %em{ style: 'display:none', id: 'size_alert' }
        %div{ class: 'text-danger', style: 'display:inline' }
          %b
            Необходимо выбрать размер!!
    .row.sizes
      %div{ class: 'col-md-10 btn-group', style: 'padding-left:0;', data: { toggle: 'buttons' } }
        - @good.sizes.each do |size|
          %label.btn.btn-default
            = radio_button_tag :size, size.name
            = size.name
    .row
      .panel.panel-success
        .panel-heading
          %h4.panel-title
            Состав
        .panel-body
          = @good.consist

    .row
      .panel.panel-success
        .panel-heading
          %h4.panel-title
            Описание
        .panel-body
          = @good.description

    .row
      - if @good.count_in_stock > 0
        = link_to 'Добавить в корзину', '#', class: 'add_good_to_basket btn btn-block btn-success', data: { good_id: @good.id }
      - else
        = link_to 'Товара нет в наличии', '#', class: 'btn btn-block btn-danger', disabled: true

