!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', http: { equiv: 'X-UA-Compatible' } }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
    %meta{ content: 'https://github.com/rossmari', name: 'description' }
    %meta{ content: 'Rossmari', name: 'author' }
    = csrf_meta_tags

    %title Fresh Styles

    = stylesheet_link_tag 'bootstrap_manifest', 'application'
    = javascript_include_tag 'application'

    = yield(:assets)

    = render 'shared/cleversite_script' if Rails.env.production?

    -#HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    -#WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      %script{ src: 'https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js' }
      %script{ src: 'https://oss.maxcdn.com/respond/1.4.2/respond.min.js' }

  %body
    -#= render 'partials/navbar'
    -#.container.marketing
      = yield
      = render 'partials/footer'
    = render 'shared/header'
    = render 'shared/categories_bar'
    = yield(:carousel)
    = render 'shared/pages_bar'
    .container.marketing
      = render 'admin/shared/flashes'
      = yield
    = render 'shared/footer'