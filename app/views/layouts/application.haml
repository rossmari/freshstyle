!!!
%html{'data-ember-extension' => '1', :lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{:content => 'width=device-width, initial-scale=1', :name => 'viewport'}/
    %meta{:content => '', :name => 'description'}/
    %meta{:content => '', :name => 'author'}/
    %link{:href => '../../favicon.ico', :rel => 'icon'}/
    %title Carousel Template for Bootstrap

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body{style: "background-image: url('/assets/background.jpg');"}
    .navbar-wrapper
      .container
        .navbar.navbar-inverse.navbar-static-top{:role => "navigation"}
          .container
            .navbar-header
              %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "#"} Свежий стиль
            .navbar-collapse.collapse
              %ul.nav.navbar-nav
                %li.active
                  %a{:href => "#"} Главная
                %li
                  %a{:href => "#contact"} Товары
                %li
                  %a{:href => "#about"} О нас
                %li
                  %a{:href => "#contact"} Как оплатить
              %ul.nav.navbar-nav.navbar-right
                - if user_signed_in?
                  - if current_user.is_admin
                    %li
                      = link_to 'Кабинет администратора', admin_root_path
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %span.glyphicon.glyphicon-off
                      Выход
                - else
                  = link_to 'Зарегистрироваться', new_registration_path(:user)
    %div{class: 'container', style: 'padding-top: 120px;'}
    %div{ class: 'container' }
      = yield

