!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', http: { equiv: 'X-UA-Compatible' } }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
    = csrf_meta_tags

    %title FreshStyle

    = stylesheet_link_tag 'admin'
    = javascript_include_tag 'admin.js'

    = yield(:assets)

    -#HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    -#WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      %script{ src: 'https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js' }
      %script{ src: 'https://oss.maxcdn.com/respond/1.4.2/respond.min.js' }

  %body
    .navbar.navbar-inverse.navbar-fixed-top{ role: 'navigation' }
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ data: { target: '.navbar-collapse', toggle: 'collapse' }, type: 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'FreshStyle', root_path, class: 'navbar-brand'

        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            = admin_menu
            %li
              = link_to destroy_user_session_path, method: :delete do
                %span.glyphicon.glyphicon-off

    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          %ul.nav.nav-sidebar
            %li= link_to t('order.orders'), admin_orders_path
            -#%li.active= link_to 'Example link', '#'
          = yield(:side_bar)
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = yield
